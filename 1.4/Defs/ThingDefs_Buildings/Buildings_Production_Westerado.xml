<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>PanningSpot_Westerado</defName>
    <label>panning spot</label>
    <description>A place where one can pan for gold. It's slow, but rewarding work.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/PanningSpot/PanningSpot</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <WorkToBuild>300</WorkToBuild>
      <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
    </statBases>
    <costList>
      <Steel>5</Steel>
      <WoodLog>50</WoodLog>
    </costList>
    <constructEffect>ConstructWood</constructEffect>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <size>(3,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>PanForGold_Westerado</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <terrainAffordanceNeeded>
    </terrainAffordanceNeeded>
    <placeWorkers>
      <li>PlaceWorker_WatermillGenerator</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>FrontierTech_Westerado</li>
    </researchPrerequisites>
  </ThingDef>
