  <ThingDef ParentName="VG_BuildingBase">
    <defName>Distillery_Westerado</defName>
    <label>distillery</label>
    <description>a fermenting barrel for making different types of alcohols.</description>
    <graphicData>
      <texPath>Things/Building/Production/Distillery/Distillery</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <canOverlapZones>false</canOverlapZones>
    <fillPercent>0.45</fillPercent>
    <pathCost>60</pathCost>
    <rotatable>false</rotatable>
    <size>(1,1)</size>
    <costList>
      <Steel>20</Steel>
    </costList>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <useHitPoints>true</useHitPoints>
    <tickerType>Rare</tickerType>
    <statBases>
      <Cleanliness>-8</Cleanliness>
      <WorkToBuild>1200</WorkToBuild>
      <Mass>28</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <designationCategory>Production</designationCategory>
    <researchPrerequisites>
      <li>DistillingTech_Westerado</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="ProcessorFramework.CompProperties_Processor">
        <capacity>30</capacity>
        <dropIngredients>false</dropIngredients>
        <showProductIcon>true</showProductIcon>
        <barOffset>(0.0, 0.25)</barOffset>
        <barScale>(1.0, 1.0)</barScale>
        <processes>
          <li>Moonshine_Westerado</li>
          <li>Schnapps_Westerado</li>
        </processes>
      </li>
    </comps>
  </ThingDef>
  <ProcessorFramework.ProcessDef>
    <defName>Moonshine_Westerado</defName>
    <thingDef>Moonshine_Westerado</thingDef>
    <ingredientFilter>
      <thingDefs>
        <li>MoonshineMash_Westerado</li>
      </thingDefs>
    </ingredientFilter>
    <processDays>9.666</processDays>
    <!-- in days, a day is 60,000 ticks -->
    <usesTemperature>true</usesTemperature>
    <temperatureSafe>-1.0~32.0</temperatureSafe>
    <temperatureIdeal>7.0~32.0</temperatureIdeal>
    <ruinedPerDegreePerHour>2.5</ruinedPerDegreePerHour>
    <!-- percent per degree per hour -->
  </ProcessorFramework.ProcessDef>
  <ProcessorFramework.ProcessDef>
    <defName>Schnapps_Westerado</defName>
    <thingDef>Schnapps_Westerado</thingDef>
    <ingredientFilter>
      <thingDefs>
        <li>SchnappsMash_Westerado</li>
      </thingDefs>
    </ingredientFilter>
    <processDays>9.666</processDays>
    <!-- in days, a day is 60,000 ticks -->
    <usesTemperature>true</usesTemperature>
    <temperatureSafe>-1.0~32.0</temperatureSafe>
    <temperatureIdeal>7.0~32.0</temperatureIdeal>
    <ruinedPerDegreePerHour>2.5</ruinedPerDegreePerHour>
    <!-- percent per degree per hour -->
  </ProcessorFramework.ProcessDef>
  <ProcessorFramework.ProcessDef>
    <defName>RyeWhiskey_Westerado</defName>
    <thingDef>RyeWhiskey_Westerado</thingDef>
    <ingredientFilter>
      <thingDefs>
        <li>RyeMash_Westererado</li>
      </thingDefs>
    </ingredientFilter>
    <processDays>7</processDays>
    <!-- in days, a day is 60,000 ticks -->
    <usesTemperature>true</usesTemperature>
    <temperatureSafe>-1.0~32.0</temperatureSafe>
    <temperatureIdeal>7.0~32.0</temperatureIdeal>
    <ruinedPerDegreePerHour>2.5</ruinedPerDegreePerHour>
    <!-- percent per degree per hour -->
  </ProcessorFramework.ProcessDef>
</Defs>