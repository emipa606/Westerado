<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ScenarioDef>
    <defName>WesteradoScenario_Westerado</defName>
    <label>Westerado</label>
    <description>he four of you wandered off into the world to settle a new frontier. You barely scraped by before finding this place.</description>
    <scenario>
      <summary>Four vagabonds - the not-so-classic RimWorld experience.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerColony_Westerado</factionDef>
      </playerFaction>
      <parts>
        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>4</pawnCount>
          <pawnChoiceCount>6</pawnChoiceCount>
        </li>
        <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
        </li>
        <!-- Player pawns modifiers -->
        <li Class="ScenPart_ForcedHediff">
          <def>ForcedHediff</def>
          <visible>false</visible>
          <context>PlayerStarter</context>
          <chance>0.5</chance>
          <hediff>Malnutrition</hediff>
          <severityRange>
            <min>0.2</min>
            <max>0.6</max>
          </severityRange>
        </li>
        <li Class="ScenPart_ForcedHediff">
          <def>ForcedHediff</def>
          <visible>false</visible>
          <context>PlayerStarter</context>
          <chance>0.10</chance>
          <hediff>AlcoholHigh</hediff>
          <severityRange>
            <min>0.2</min>
            <max>0.8</max>
          </severityRange>
        </li>
        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>600</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>SmokedJerky_Westerado</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineIndustrial</thingDef>
          <count>20</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>25</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_MusketRifle_Westerado</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_FlintlockPistol_Westerado</thingDef>
          <count>3</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_BowieKnife_Westerado</thingDef>
          <stuff>Steel</stuff>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Bedroll</thingDef>
          <stuff>Cloth</stuff>
          <count>4</count>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>1</count>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>
        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>400</count>
        </li>
        <!-- Scatter some things anywhere -->
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Steel</thingDef>
          <count>640</count>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>2</count>
        </li>
        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>A New Frontier\n\nDriven from your earlier lives your group undertook a long and arduous journey to find a new frontier to settle. You've come across this wild and inhospitable corner of the world; will it just be another unremarkable stop in your odyssey, or a place you can finally call home?</text>
          <closeSound>GameStartSting</closeSound>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
</Defs>