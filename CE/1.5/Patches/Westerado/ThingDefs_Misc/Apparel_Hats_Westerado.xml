        <SocialImpact>0.20</SocialImpact>
        <Suppressability>-0.20</Suppressability>
        <MeleeParryChance>0.20</MeleeParryChance>
        <MeleeCritChance>0.05</MeleeCritChance>
        <MeleeDodgeChance>0.05</MeleeDodgeChance>
      </equippedStatOffsets>
    </value>
  </Operation>
  <!-- ========== Indian Single Feather Bonnet ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_SingleFeatherBonnetHat_Westerado"]/equippedStatOffsets</xpath>
    <value>
      <equippedStatOffsets>
        <SocialImpact>0.10</SocialImpact>
        <Suppressability>-0.05</Suppressability>
        <MeleeCritChance>0.05</MeleeCritChance>
        <MeleeDodgeChance>0.05</MeleeDodgeChance>
      </equippedStatOffsets>
    </value>
  </Operation>
</Patch>
